{erl_opts, [debug_info]}.
{deps, [
    {mapz, "0.3.0"}
]}.

{profiles, [
    {test, [
        {deps, [unite]},
        {eunit_opts, [
            no_tty,
            {report, {unite_compact, []}},
            {report, {eunit_surefire, [{dir, "_build/test/"}]}}
        ]},
        {shell, [
            {apps, [grisp]},
            {config, "config/test.config"}
        ]}
    ]},
    {eqc, [
        {extra_src_dirs, ["test"]}
    ]}
]}.
